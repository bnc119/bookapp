

<h2><%= pluralize(@user.books.count, "book") %> in My Reading Queue</h2>

<%= @user.name %>
<%= @user.email %>


<%= form_for(:search, :url =>search_path, :method=>:get) do |f| %>

	<legend>Search</legend>

	<%= f.text_field :q, :class=>"text_field", :placeholder => "search by title or author" %>
	<input type="submit" class=btn btn-primary" value="search">
	
<% end %>
			


<table class="table table-hover">
  <tr>
    <th>Title</th>
    <th>Author</th>
  </tr>
  
  <% unless @books.empty? %>
    <% @books.each  do |b| %>
      <tr>
        <td><%= link_to b.title, b %><td>
        <td><%= b.author_last %><td>
      <tr>
    <% end %>
  <% end %>
  
</table>
				
<%= link_to "Add Book!", new_book_path %>

